<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity android:name=".WebsiteActivity"></activity>
        <activity android:name=".FavoriteBookActivity"
            android:label="@string/activity_favorites_books"/>
        <activity android:name=".CurrentlyReadActivity"
            android:label="@string/activity_currently_reading"/>
        <activity android:name=".WantToReadActivity" />
        <activity android:name=".AlreadyReadBookActivity"
            android:label="@string/activity_alread_read"/>
        <activity
            android:name=".BookActivity"
            android:label="@string/title_activity_book"
            android:theme="@style/Theme.MyLibrary.NoActionBar" />
        <activity android:name=".AllBooksActivity"
            android:label="@string/activity_all_books"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>